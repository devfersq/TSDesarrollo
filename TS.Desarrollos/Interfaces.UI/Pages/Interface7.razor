@page "/interface7"
@using Almacen.Data.VModels
<EditForm Model="vmData">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Solicitud de Movimiento</h3>
                    </div>
                    <div class="card-body">
                        <form class="needs-validation" novalidate="">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <label>Folio</label>
                                                <text>&nbsp;</text>
                                                <input type="text" class="form-input" placeholder="Buscar por Folio" @bind="vmData.Orden.Folio">
                                                <span class="input-group-append">
                                                    <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <label>Tipo</label>
                                                <text>&nbsp;</text>
                                                <input type="text" class="form-control" placeholder="Buscar por Folio" @bind="vmData.Orden.Tipo">
                                                <span class="input-group-append">
                                                    <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <label>Sucursal</label>
                                                <text>&nbsp;</text>
                                                <input type="text" class="form-control" placeholder="Buscar por Folio" @bind="vmData.Orden.Sucursal">
                                                <span class="input-group-append">
                                                    <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <label>Origen</label>
                                                <text>&nbsp;</text>
                                                <input type="text" class="form-control">
                                                <span class="input-group-append">
                                                    <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <label>Entrega</label>
                                                <text>&nbsp;</text>
                                                <input type="text" class="form-control" @bind="vmData.Orden.NombreDestino">
                                                <span class="input-group-append">
                                                    <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="row">
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <label>Observaciones</label>
                                                <text>&nbsp;</text>
                                                <textarea class="form-control" rows="3" placeholder="Enter ..." @bind="vmData.Orden.Observaciones"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" id="Impreso">
                                                <label class="form-check-label" for="exampleCheck1">Impreso</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 mb-3">
                                    <h4>Productos</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-auto">
                                    <label>Producto</label><text>&nbsp;</text>
                                </div>
                                <div class="col-auto">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Buscar producto">
                                        <span class="input-group-append">
                                            <button type="button" class="btn btn-info btn-flat"><i class="fa fa-search"></i></button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <label>Cantidad</label><text>&nbsp;</text>
                                </div>
                                <div class="col-auto">
                                    <input type="text" class="form-control" placeholder="Capture la cantidad">
                                </div>
                                <div class="col-auto">
                                    <a class="add-producto">
                                        Agregar <i class="fas fa-plus-circle"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <table id="table-1" class="table table-bordered table-hover">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Clave</th>
                                                <th>Nombre</th>
                                                <th>Cantidad</th>
                                                <th>A</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Trident</td>
                                                <td>
                                                    Internet
                                                    Explorer 4.0
                                                </td>
                                                <td>Win 95+</td>
                                                <td>Win 95+</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <br />
                            <a class="btn btn-app bg-info" id="floatSave">
                                <i class="fas fa-save"></i>Guardar
                            </a>
                            <a class="btn btn-app bg-danger" id="floatClose">
                                <i class="fas fa-window-close"></i> Cancelar
                            </a>
                            <a class="btn btn-app bg-warning" id="floatWarning">
                                <i class="fas fa-print"></i>Imprimir
                            </a>
                            <a class="btn btn-app bg-secondary" id="floatEntrega">
                                <i class="fas fa-shipping-fast"></i>Entregar
                            </a>
                            <a class="btn btn-app" id="floatSalirf">
                                <i class="fas fa-sign-out-alt"></i>Salir
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>
